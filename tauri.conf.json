{
  "$schema": "https://schema.tauri.app/config/2.1.0",
  "productName": "Muezzin",
  "version": "1.0.0.0",
  "identifier": "io.github.cormacz.muezzin",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "dist"
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi", "deb", "appimage", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["ressources/*"],
    "externalBin": [],
    "copyright": "MIT License",
    "category": "Utility",
    "shortDescription": "Islamic prayer times application",
    "longDescription": "A modern, privacy-focused Islamic prayer times and Quran application for Windows, macOS, and Linux.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libayatana-appindicator3-1"]
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "Muezzin",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "decorations": true,
        "alwaysOnTop": false,
        "theme": "Dark",
        "hiddenTitle": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self' data:",
      "freezePrototype": true,
      "dangerousDisableAssetCspModification": false
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  },
  "plugins": {
    "store": {
      "encryption": true
    },
    "notification": {
      "all": true
    },
    "autostart": {
      "all": true
    }
  }
}
